<% @title = _("Make an {{law_used_short}} request to '{{public_body_name}}'",:law_used_short=>h(@info_request.law_used_short),:public_body_name=>h(@info_request.public_body.name))  %>

    <div id="request_new" class="controller_request request_view">

        <% if @existing_request %>
            <!-- FIXME: this element wasn't in Jedidiah's mock-up, so may not be style properly - check this -->
            <div class="existing-request-error" id="existing-request-error">
                <ul>
                    <li>
               <%= _('{{existing_request_user}} already
              created the same request on {{date}}. You can either view the <a href="{{existing_request}}">existing request</a>,
              or edit the details below to make a new but similar request.',:existing_request_user=>user_or_you_capital_link(@existing_request.user), :date=>simple_date(@existing_request.created_at), :existing_request=>request_path(@existing_request)) %>
                    </li>
                </ul>
            </div>
        <% end %>

        <header>
            <p class="request-meta subtitle">
                <%= _('New request for information to:') %>
            </p>
            <h1 class="request-title"><%= @info_request.public_body.name %></h1>

            <% if @info_request.public_body.has_notes? %>
                <div id="request-authority_note">
                    <h2><%= _('Special note for this authority!') %></h2>
                    <p><%= @info_request.public_body.notes_as_html.html_safe %></p>
                </div>
            <% end %>

            <% if @info_request.public_body.eir_only? %>
                <div id="request-authority_eir-warning">
                    <h2><%= _('Please ask for environmental information only') %></h2>

                    <p><%= _('The Freedom of Information Act <strong>does not apply</strong> to') %> <%=h(@info_request.public_body.name)%>.
                    <%= _('However, you have the right to request environmental
                    information under a different law') %> (<a href="/help/requesting#eir">explanation</a>).
                    <%= _('This covers a very wide spectrum of information about the state of
                    the <strong>natural and built environment</strong>, such as:') %>

                    <ul>
                    <li><%= _('Air, water, soil, land, flora and fauna (including how these effect
                    human beings)') %></li>
                    <li><%= _('Information on emissions and discharges (e.g. noise, energy,
                    radiation, waste materials)') %></li>
                    <li><%= _('Human health and safety') %></li>
                    <li><%= _('Cultural sites and built structures (as they may be affected by the
                    environmental factors listed above)') %></li>
                    <li><%= _('Plans and administrative measures that affect these matters') %></li>
                    </ul>

                    <p><%= _('Please only request information that comes under those categories, <strong>do not waste your
                    time</strong> or the time of the public authority by requesting unrelated information.') %></p>
                </div> <!-- #request-authority_eir-warning -->
            <% end %>

        </header>

        <%= foi_error_messages_for :info_request, :outgoing_message %>

        <%= form_for(@info_request, :url => new_request_path, :html => { :id => 'write_form' }  ) do |f| %>

            <div id="request_header" class="new_request-header">

                <div id="request_header_subject" class="new_request-header_subject">
                    <p>
                        <label class="form_label" for="typeahead_search"><em>1.</em> <%= _('Write a one-line summary of your request:') %></label>
                    </p>
                    <p>
                        <%= f.text_field :title, :size => 50, :id =>"typeahead_search" %>
                    </p>
                </div>

            </div> <!-- #request_header .new_request-header -->

            <div id="request_advice" class="new_request-advice">
                <h3><%= _('Advice:') %></h3>
                <ul>
                    <li><%= _('Ask for specific documents or information; this site is not suitable for general enquiries.') %></li>
                    <li><%= _('Keep it focused: you\'ll be more likely to get what you want. <a href="{{url}}">Read More</a>.', :url => (help_requesting_path + '#focused').html_safe) %></li>
                    <% if @user %>
                        <li><%= _('Everything that you enter on this page will be displayed publicly on this website forever.  <a href="{{url}}">Read more</a>.',:url => (help_privacy_path + '#public_request').html_safe) %></li>
                    <% else %>
                        <li><%= _('Everything that you enter on this page, including your name, will be displayed publicly on this website forever.  <a href="{{url}}">Read more</a>.',:url => (help_privacy_path + '#public_request').html_safe) %></li>
                        <li><%= _('If you are thinking of using a pseudonym, please <a href="">Read this first</a>.', :url => (help_privacy_path + '#real_name').html_safe) %></li>
                    <% end %>
                    <li><%= _('You cannot request information about yourself or personal information about another individual on this site <a href="{{url}}">Read more</a>.', :url => (help_privacy_path + '#data_protection').html_safe) %></li>
                </ul>
            </div> <!-- #request_advice .new_request-advice -->

            <div id="request_form">

                <%= fields_for :outgoing_message do |o| %>
                    <p>
                        <label class="form_label" for="outgoing_message_body"><%= _('<em>2.</em> Write your request in simple, precise language:') %></label>
                    </p>
                    <p>
                        <%= o.text_area :body, :rows => 20, :cols => 60 %>
                    </p>
                <% end %>

                <% if !@info_request.tag_string.empty? %>
                    <p>
                        <%= f.hidden_field(:tag_string) %>
                        <strong>Tags:</strong> <%=h @info_request.tag_string %>
                    </p>
                <% end %>

                <div class="form_button">
                    <%= f.hidden_field(:public_body_id, { :value => @info_request.public_body_id } ) %>
                    <%= hidden_field_tag(:submitted_new_request, 1 ) %>
                    <%= hidden_field_tag(:preview, 1 ) %>
                    <%= submit_tag _("Preview your public request") %>
                </div>

            </div> <!-- #request_form -->

        <% end %>

    </div> <!-- #request_new .controller_request .request_view -->
