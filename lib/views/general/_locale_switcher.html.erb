<% if AlaveteliConfiguration::responsive_styling || params[:responsive] %>
<div class="ms-header__logo">
  <a href="http://mysociety.org">mySociety</a>
</div>
<% end %>
<% if FastGettext.default_available_locales.length > 1 && !params.empty? %>
  <div id="user_locale_switcher" class="ui-dropdown-list">
    <% FastGettext.default_available_locales.each do |possible_locale| %>
     <% if possible_locale == FastGettext.locale %>
      <p class="ui-dropdown-list-trigger en">
       <strong class="current-locale"><%= locale_name(possible_locale) %></strong>
      </p>
      <ul class="available-languages">
     <% else %>
       <li>
        <a href="<%= url_for params.merge(:locale => possible_locale) %>"><%= locale_name(possible_locale) %></a>
       </li>
     <% end %>
    <% end %>
    </ul>
  </div>
<% end %>
